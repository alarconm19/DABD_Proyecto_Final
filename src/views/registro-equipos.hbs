<!-- Main Content -->
<div class="container-fluid ms-5" style="margin-left: 260px; padding-top: 20px;">
    <h2 class="text-uppercase mb-4">Registro de Equipos</h2>
    <form action="/registro-equipos" method="POST">
        <div class="col-md-6">
            <h4 class="mb-3">Registrar nuevo equipo</h4>
            <div class="mb-3">
                <label for="categoria" class="form-label">Categoría</label>
                <select class="form-select" id="categoria" name="categoria" required>
                    <option value="" disabled selected>Seleccione una categoría...</option>
                    <option value=1>Maxi</option>
                    <option value=2>Super</option>
                    <option value=3>Master</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="division" class="form-label">División</label>
                <select class="form-select" id="division" name="division" required>
                    <option value="" selected disabled>Seleccione una división...</option>
                    <option value=1>A</option>
                    <option value=2>B</option>
                    <option value=3>C</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="nombreEquipo" class="form-label">Nombre del Equipo</label>
                <input type="text" class="form-control" id="nombreEquipo" name="nombreEquipo"
                    placeholder="Ingrese el nombre del equipo" required>
            </div>
            <div class="mb-3">
                <label for="nombreDT" class="form-label">Nombre del Director Técnico</label>
                <input type="text" class="form-control" id="nombreDT" name="nombreDT"
                    placeholder="Ingrese el nombre del DT" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrar Equipo</button>
            <div class="col-md-4 d-flex align-items-center">
                {{#if success}}
                <div class="alert alert-success mt-3" role="alert">
                    {{success}}
                </div>
                {{/if}}
                {{#if error}}
                <div class="alert alert-danger mt-3" role="alert">
                    {{error}}
                </div>
                {{/if}}
            </div>
        </div>
    </form>
</div>