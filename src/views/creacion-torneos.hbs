<!-- Main Content -->
<div class="container-fluid ms-5" style="margin-left: 260px; padding-top: 20px;">
    <h2 class="text-uppercase mb-4">Creación de Torneos</h2>
    <form action="/creacion-torneos" method="POST">
        <div class="col-md-6">
            <h4 class="mb-3">Crear nuevo torneo</h4>
            <div class="mb-3">
                <label for="nombreTorneo" class="form-label">Nombre del Torneo</label>
                <input type="text" class="form-control" id="nombreTorneo" name="nombreTorneo"
                    placeholder="Ingrese el nombre del torneo" required>
            </div>
            <div class="mb-3">
                <label for="categoria" class="form-label">Categoría</label>
                <select class="form-select" id="categoria" name="categoria" required>
                    <option value="" disabled selected>Seleccione una categoría...</option>
                    <option value=1>Maxi</option>
                    <option value=2>Super</option>
                    <option value=3>Master</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="division" class="form-label">División</label>
                <select class="form-select" id="division" name="division" required>
                    <option value="" selected disabled>Seleccione una división...</option>
                    <option value=1>A</option>
                    <option value=2>B</option>
                    <option value=3>C</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="fechaInicio" class="form-label">Fecha de Inicio del Torneo</label>
                <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" required>
            </div>

            <div class="mb-3">
                <label for="fechaFin" class="form-label">Fecha de Fin del Torneo</label>
                <input type="date" class="form-control" id="fechaFin" name="fechaFin" required>
            </div>

            <div class="mb-3">
                <label for="inicioInscripcion" class="form-label">Fecha de Inicio de Inscripción</label>
                <input type="date" class="form-control" id="inicioInscripcion" name="inicioInscripcion" required>
            </div>

            <div class="mb-3">
                <label for="finInscripcion" class="form-label">Fecha de Fin de Inscripción</label>
                <input type="date" class="form-control" id="finInscripcion" name="finInscripcion" required>
            </div>

            <button type="submit" class="btn btn-primary">Crear Torneo</button>
            <div class="col-md-4 d-flex align-items-center">
                {{#if success}}
                <div class="alert alert-success mt-3" role="alert">
                    {{success}}
                </div>
                {{/if}}
                {{#if error}}
                <div class="alert alert-danger mt-3" role="alert">
                    {{error}}
                </div>
                {{/if}}
            </div>
        </div>
    </form>
</div>